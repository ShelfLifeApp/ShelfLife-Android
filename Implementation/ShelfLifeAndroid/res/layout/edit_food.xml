<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:isScrollContainer="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
	    <TextView android:id="@+id/edit_name_title_text"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="Name: "
	       android:textStyle="bold"
	       android:textColor="#CCFFBB33"
	       />
	    
	    <EditText
	        android:id="@+id/edit_name_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="text"
	        android:hint="Food Name" />

	    <TextView android:id="@+id/edit_purchased_title_text"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="Date Purchased: "
	       android:textStyle="bold"
	       android:textColor="#CCFFBB33"
	       />

	    <DatePicker
	        android:id="@+id/edit_purchase_date"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />"
   		
   		<TextView android:id="@+id/edit_opened_question_text"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="Has this food been opened?"
	       android:textStyle="bold"
	       android:textColor="#CCFFBB33"
	       />
   		
   		<RadioGroup
   		    android:id="@+id/edit_opened_group"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    <RadioButton android:id="@+id/edit_opened_true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Yes"/>
		    <RadioButton android:id="@+id/edit_opened_false"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="No"/>
		</RadioGroup>
   		
		<TextView android:id="@+id/edit_opened_title_text"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="Date Opened: "
	       android:textStyle="bold"
	       android:textColor="#CCFFBB33"
	       />
		
		<DatePicker
	        android:id="@+id/edit_open_date"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
   
		<TextView android:id="@+id/edit_state_title_text"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="State: "
	       android:textStyle="bold"
	       android:textColor="#CCFFBB33"
	       />
		<Spinner  
	        android:id="@+id/state_spinner"  
	        android:layout_height="wrap_content"  
	        android:prompt="@string/select_a_state"
	        android:layout_width="fill_parent"  
	        android:entries="@array/state_list" >  
    	</Spinner>  

		<TextView android:id="@+id/edit_quantity_title_text"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="Quantity: "
	       android:textStyle="bold"
	       android:textColor="#CCFFBB33"
	       />
		
		<EditText
		    android:id="@+id/edit_quantity_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:inputType="number"
		    android:hint="How many?" />

	    <TextView android:id="@+id/edit_notes_title_text"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="Notes: "
	       android:textStyle="bold"
	       android:textColor="#CCFFBB33"
	       />
	    
	    <EditText
	        android:id="@+id/edit_notes_text"
	        android:layout_height="wrap_content"
	        android:inputType="textMultiLine"  
    		android:lines="10"  
    		android:layout_width="fill_parent"
	        android:hint="Add some notes." />
   

</LinearLayout>
</ScrollView>