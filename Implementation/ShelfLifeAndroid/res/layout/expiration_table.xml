<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/state_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TableRow
        android:id="@+id/row1_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/row1_state_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Location"/>
        
        <TextView
            android:id="@+id/row1_state_opened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Opened"/>
        
        <TextView
            android:id="@+id/row1_state_unopened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Unopened"/>
        
        </TableRow>
        
    	<TableRow
        android:id="@+id/row2_shelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/row2_shelf_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Shelf"/>
        
        <TextView
            android:id="@+id/row2_shelf_opened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="3"/>
        
        <TextView
            android:id="@+id/row2_shelf_unopened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="4"/>
        
        </TableRow>
        
    	<TableRow
        android:id="@+id/row3_fridge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/row3_fridge_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Fridge"/>
        
        <TextView
            android:id="@+id/row3_fridge_opened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="2"/>
        
        <TextView
            android:id="@+id/row3_fridge_unopened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="5"/>
        
        </TableRow>
        
    	<TableRow
        android:id="@+id/row4_freezer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/row4_freezer_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Freezer"/>
        
        <TextView
            android:id="@+id/row4_freezer_opened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="1"/>
        
        <TextView
            android:id="@+id/row4_freezer_unopened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="6"/>
        
        </TableRow>
    
</TableLayout>