<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- CREATE A RECTANGLE WITH YOUR BORDER COLOR -->
    <item android:top="10dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/listitem_shade_selected"/>
            <corners android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp" />
        </shape>
    </item>

    <!-- NOW DEFINE THE NORMAL COLOR-->
    <item android:bottom="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/listitem_background_content_selected"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>